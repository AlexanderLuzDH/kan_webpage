    "input": { "type": "object", "description": "Redacted input metadata" },
    "prediction": { "type": "string" },
    "score": { "type": "number", "minimum": 0 },
    "threshold_tau": { "type": "number", "minimum": 0 },
    "certified": { "type": "boolean", "description": "True if meets Ï„" },
    "abstain": { "type": "boolean" },
    "reason": { "type": "string", "description": "If abstain=true, reason code" },
    "timestamp": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "prediction", "threshold_tau", "certified", "abstain", "timestamp"],
  "additionalProperties": true
}

